local Players = game:GetService("Players")
local Player = Players.LocalPlayer
local PlayerGui = Player:WaitForChild("PlayerGui")
local RunService = game:GetService("RunService")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "CheatUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = PlayerGui

local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 250, 0, 400)
mainFrame.Position = UDim2.new(0, 20, 0, 50)
mainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
mainFrame.BorderSizePixel = 0
mainFrame.Parent = screenGui

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.BackgroundTransparency = 1
title.Text = "FFa Assist (Edited by kert)"
title.Font = Enum.Font.SourceSansBold
title.TextSize = 20
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.Parent = mainFrame

local yPos = 40
local function addElement()
    yPos = yPos + 40
    mainFrame.Size = UDim2.new(0, 250, 0, yPos + 10)
    return UDim2.new(0, 10, 0, yPos - 40)
end

local function createToggle(name, default, callback)
    local toggleFrame = Instance.new("Frame")
    toggleFrame.Size = UDim2.new(1, -20, 0, 35)
    toggleFrame.Position = addElement()
    toggleFrame.BackgroundTransparency = 1
    toggleFrame.Parent = mainFrame

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0.7, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = name
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Font = Enum.Font.SourceSans
    label.TextSize = 16
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = toggleFrame

    local button = Instance.new("TextButton")
    button.Size = UDim2.new(0.28, 0, 1, 0)
    button.Position = UDim2.new(0.7, 0, 0, 0)
    button.Text = default and "ON" or "OFF"
    button.BackgroundColor3 = default and Color3.fromRGB(0, 200, 0) or Color3.fromRGB(200, 0, 0)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.SourceSansBold
    button.TextSize = 14
    button.Parent = toggleFrame

    button.MouseButton1Click:Connect(function()
        default = not default
        button.Text = default and "ON" or "OFF"
        button.BackgroundColor3 = default and Color3.fromRGB(0, 200, 0) or Color3.fromRGB(200, 0, 0)
        callback(default)
    end)
end

local function createSlider(name, min, max, default, callback)
    local sliderFrame = Instance.new("Frame")
    sliderFrame.Size = UDim2.new(1, -20, 0, 35)
    sliderFrame.Position = addElement()
    sliderFrame.BackgroundTransparency = 1
    sliderFrame.Parent = mainFrame

    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0.6, 0, 1, 0)
    label.BackgroundTransparency = 1
    label.Text = name .. ": " .. default
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Font = Enum.Font.SourceSans
    label.TextSize = 16
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Parent = sliderFrame

    local sliderBg = Instance.new("Frame")
    sliderBg.Size = UDim2.new(0.35, 0, 0.7, 0)
    sliderBg.Position = UDim2.new(0.62, 0, 0.15, 0)
    sliderBg.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    sliderBg.BorderSizePixel = 0
    sliderBg.Parent = sliderFrame

    local slider = Instance.new("Frame")
    local percent = (default - min) / (max - min)
    slider.Size = UDim2.new(percent, 0, 1, 0)
    slider.Position = UDim2.new(0, 0, 0, 0)
    slider.BackgroundColor3 = Color3.fromRGB(0, 150, 0)
    slider.BorderSizePixel = 0
    slider.Parent = sliderBg

    local UIS = game:GetService("UserInputService")
    local dragging = false

    sliderBg.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
        end
    end)

    UIS.InputChanged:Connect(function(input)
        if dragging and input.UserInputType == Enum.UserInputType.MouseMovement then
            local mousePos = UIS:GetMouseLocation()
            local relativeX = math.clamp(mousePos.X - sliderBg.AbsolutePosition.X, 0, sliderBg.AbsoluteSize.X)
            local percent = relativeX / sliderBg.AbsoluteSize.X
            local value = math.floor(math.clamp(percent * (max - min) + min, min, max))
            
            slider.Size = UDim2.new(percent, 0, 1, 0)
            label.Text = name .. ": " .. value
            callback(value)
        end
    end)

    UIS.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)
end

_G.USE_FT = true
_G.AUTO_RESPAWN = true
_G.AUTO_COLLECT_HEALTH = true
_G.AUTO_COLLECT_AMMO = true
_G.COLLECT_RANGE = 1000

createToggle("FireTouch Mode", false, function(val) _G.USE_FT = val end)
createToggle("Auto Respawn", true, function(val) _G.AUTO_RESPAWN = val end)
createToggle("Auto Health", true, function(val) _G.AUTO_COLLECT_HEALTH = val end)
createToggle("Auto Ammo", true, function(val) _G.AUTO_COLLECT_AMMO = val end)
createSlider("Collect Range", 50, 2000, 500, function(val) _G.COLLECT_RANGE = val end)

spawn(function()
    RunService.RenderStepped:Connect(function()
        if not _G.AUTO_COLLECT_HEALTH and not _G.AUTO_COLLECT_AMMO then return end
        
        local character = Players.LocalPlayer.Character
        if not character then return end
        local hrp = character:FindFirstChild("HumanoidRootPart")
        if not hrp then return end
        local humanoid = character:FindFirstChild("Humanoid")
        local needsHealth = humanoid and humanoid.Health < humanoid.MaxHealth
        
        for _, obj in workspace:GetChildren() do
            if obj.Name == "_drop" and obj:IsA("BasePart") then
                local distance = (hrp.Position - obj.Position).Magnitude
                if distance <= _G.COLLECT_RANGE then
                    if ( _G.AUTO_COLLECT_HEALTH and obj:FindFirstChild("Health") and needsHealth ) or 
                       ( _G.AUTO_COLLECT_AMMO and obj:FindFirstChild("Ammo") ) then
                        
                        if _G.USE_FT then
                            firetouchinterest(hrp, obj, 0)
                            firetouchinterest(hrp, obj, 1)
                        else
                            hrp.CFrame = CFrame.new(obj.Position + Vector3.new(0, 5, 0))
                        end
                    end
                end
            end
        end
    end)
end)
